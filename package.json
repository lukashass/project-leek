{
  "name": "project-leek",
  "version": "0.0.1",
  "repository": "https://github.com/project-leek/project-leek.git",
  "author": "Team leek",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "setup": "yarn && lerna link",
    "start": "yarn build:dependencies && lerna run --parallel start",
    "start:app": "yarn build:dependencies && lerna run --scope @project-leek/app --parallel start",
    "start:backend": "yarn build:dependencies && lerna run --scope @project-leek/backend --parallel start",
    "start:commons": "yarn build:dependencies && lerna run --scope @project-leek/commons --parallel start",
    "build": "lerna run build",
    "build:dependencies": "lerna run --scope @project-leek/commons build",
    "build:changed": "lerna run --since origin/master --include-dependents build",
    "lint": "lerna run lint",
    "lint:changed": "lerna run --since origin/master --include-dependents lint",
    "test": "lerna run test",
    "test:changed": "lerna run --since origin/master --include-dependents test",
    "test:update": "lerna run test -- -u",
    "test:update:changed": "lerna run --since origin/master --include-dependents test -- -u",
    "typecheck": "lerna run typecheck",
    "typecheck:changed": "lerna run --since origin/master --include-dependents typecheck",
    "clean": "lerna run clean",
    "reset": "lerna run reset && lerna clean --yes && shx rm -rf node_modules/ && yarn setup"
  },

  "devDependencies": {
    "@types/jest": "26.0.15",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "eslint": "7.13.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.0",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "shx": "0.3.3",
    "ts-jest": "26.4.4",
    "typescript": "4.0.5"
  }
}
